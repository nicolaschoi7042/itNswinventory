# IT 자산 인벤토리 시스템 환경 변수 설정

# 데이터베이스 설정
DB_PASSWORD=your_secure_database_password_here
DB_HOST=localhost
DB_NAME=inventory_db
DB_USER=inventory_user
DB_PORT=5432

# JWT 토큰 설정 (강력한 비밀키 사용 필수!)
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production

# API 서버 설정
NODE_ENV=production
PORT=3000
API_BASE_URL=http://localhost:3000/api

# 프론트엔드 설정
FRONTEND_URL=http://localhost:8080

# 백업 설정
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_CRON="0 2,14 * * *"  # 매일 오전 2시, 오후 2시

# 모니터링 설정 (선택사항)
GRAFANA_PASSWORD=admin123

# 이메일 알림 설정 (선택사항)
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=alerts@company.com
SMTP_PASSWORD=smtp_password
ALERT_EMAIL=admin@company.com

# 보안 설정
RATE_LIMIT_WINDOW=900000  # 15분 (밀리초)
RATE_LIMIT_MAX=100        # 최대 요청 수
SESSION_TIMEOUT=28800000  # 8시간 (밀리초)

# 파일 업로드 제한
MAX_FILE_SIZE=10485760    # 10MB (바이트)

# 로그 레벨 (error, warn, info, debug)
LOG_LEVEL=info

# HTTPS 설정 (선택사항)
SSL_CERT_PATH=/etc/ssl/certs/inventory.crt
SSL_KEY_PATH=/etc/ssl/private/inventory.key

# 회사 정보 (시스템에 표시됨)
COMPANY_NAME=우리회사
SYSTEM_ADMIN_EMAIL=it@company.com

# 타임존 설정
TZ=Asia/Seoul
